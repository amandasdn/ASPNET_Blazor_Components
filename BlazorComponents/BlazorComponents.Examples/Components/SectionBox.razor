@*
    Section Box
*@

<section class="section-content col-md-@Col">
    <div class="@(HasBox ? "section-box" : "")">

        @ChildContent

        <div class="clearfix" />
    </div>
</section>

@code {

    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public int Col { get; set; }
    [Parameter] public bool HasBox { get; set; } = true;

}
