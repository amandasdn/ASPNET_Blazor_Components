@page "/forms"
@inherits FormsModel
@using BlazorComponents.Examples.Components;

<TitlePage>Forms</TitlePage>

<div class="col-md-12 mb-3">
    <fieldset class="field-input field-search">
        <input value="@SearchText" @onchange="OnSearch" placeholder="Pesquisar componente..." type="text" />
    </fieldset>
</div>

<div class="clearfix" />

<PreviewBox Title="FieldText" SearchText="@SearchText">
    <SectionBox HasRow="true">
        <FieldText Col="3" Model="PersonExample" Label="@nameof(PersonObj.Name)" Value="@PersonObj.Name" />
        <FieldText Col="3" Model="PersonExample" Label="@nameof(PersonObj.Surname)" Value="@PersonObj.Surname" />
    </SectionBox>

    <CodeBox>
        &lt;FieldText Col="3" Model="PersonExample" Label="&#64;nameof(PersonObj.Name)" Value="PersonObj.Name" /&gt;<br />
        &lt;FieldText Col="3" Model="PersonExample" Label="&#64;nameof(PersonObj.Surname)" Value="PersonObj.Surname" /&gt;
    </CodeBox>
</PreviewBox>

<PreviewBox Title="FieldNumber" SearchText="@SearchText">
    <SectionBox HasBox="true">
        <FieldNumber Col="2" Model="PersonExample" ValueType="int" Label="@nameof(PersonObj.Age)" Value="@PersonObj.Age" />
    </SectionBox>

    <CodeBox>
        &lt;FieldNumber Col="2" Model="PersonExample" ValueType="int" Label="&#64;nameof(PersonObj.Age)" Value="PersonObj.Age" /&gt;
    </CodeBox>
</PreviewBox>

<PreviewBox Title="FieldDate" SearchText="@SearchText">
    <SectionBox HasRow="true">
        <FieldDate Col="3" Model="PersonExample" ValueType="DateTime" Label="@nameof(PersonObj.Birthday)" Value="@PersonObj.Birthday" />
    </SectionBox>

    <CodeBox>
        &lt;FieldDate Col="3" Model="PersonExample" ValueType="DateTime" Label="&#64;nameof(PersonObj.Birthday)" Value="PersonObj.Birthday" /&gt;
    </CodeBox>
</PreviewBox>

<PreviewBox Title="FieldCheckbox" SearchText="@SearchText">
    <SectionBox>
        <FieldCheckbox Model="PersonExample" Label="@nameof(PersonObj.IsProgrammer)" Display="inline-block" Value="@PersonObj.IsProgrammer" />
        <FieldCheckbox Model="PersonExample" Label="@nameof(PersonObj.IsActive)" Display="inline-block" Value="@PersonObj.IsActive" />
    </SectionBox>

    <CodeBox>
        &lt;FieldCheckbox Model="PersonExample" Label="&#64;nameof(PersonObj.IsProgrammer)" Display="inline-block" Value="PersonObj.IsProgrammer" /&gt;<br />
        &lt;FieldCheckbox Model="PersonExample" Label="&#64;nameof(PersonObj.IsActive)" Display="inline-block" Value="PersonObj.IsActive" /&gt;
    </CodeBox>
</PreviewBox>

<PreviewBox Title="FieldRadioGroup" SearchText="@SearchText">
    <SectionBox>
        <FieldRadioGroup Context="r" Value="@PersonObj.Gender" Display="block">
            <FieldRadioButton ContextGroup="@r" Label="Masculino" Value="m" />
            <FieldRadioButton ContextGroup="@r" Label="Feminino" Value="f" />
            <FieldRadioButton ContextGroup="@r" Label="Outro" Value="o" />
        </FieldRadioGroup>
    </SectionBox>

    <CodeBox>
        &lt;FieldRadioGroup Context="r" Value="Obj.Gender" Display="block"&gt;<br />
        &nbsp; &nbsp; &lt;FieldRadioButton ContextGroup="&#64;r" Label="Masculino" Value="m" /&gt;<br />
        &nbsp; &nbsp; &lt;FieldRadioButton ContextGroup="&#64;r" Label="Feminino" Value="f" /&gt;<br />
        &nbsp; &nbsp; &lt;FieldRadioButton ContextGroup="&#64;r" Label="Outro" Value="o" /&gt;<br />
        &lt;/FieldRadioGroup&gt;
    </CodeBox>
</PreviewBox>
