@page "/forms"
@inherits FormsModel
@using BlazorComponents.Examples.Components;

<TitlePage>Forms</TitlePage>

<div class="preview-box">
    <h2>FieldText</h2>

    <SectionBox HasRow="true">
        <FieldText Col="3" Model="PersonExample" Label="@nameof(PersonObj.Name)" @bind-Value="PersonObj.Name" />
        <FieldText Col="3" Model="PersonExample" Label="@nameof(PersonObj.Surname)" @bind-Value="PersonObj.Surname" />
    </SectionBox>

    <CodeBox>
        &lt;FieldText
        Model="ModelName"
        Label="&#64;nameof(Obj.Property)"
        &#64;bind-Value="Obj.Name" Col="12" /&gt;
    </CodeBox>

    <div class="clearfix" />
</div>

<div class="preview-box">
    <h2>FieldNumber</h2>

    <SectionBox HasBox="true">
        <FieldNumber Col="2" Model="PersonExample" ValueType="int" Label="@nameof(PersonObj.Age)" @bind-Value="PersonObj.Age" />
    </SectionBox>

    <CodeBox>
        &lt;FieldNumber
        Model="ModelName"
        ValueType="int"
        Label="&#64;nameof(Obj.Property)"
        &#64;bind-Value="Obj.Name" Col="12" /&gt;
    </CodeBox>

    <div class="clearfix" />
</div>

<div class="preview-box">
    <h2>FieldDate</h2>

    <SectionBox HasRow="true">
        <FieldDate Col="3" Model="PersonExample" ValueType="DateTime" Label="@nameof(PersonObj.Birthday)" @bind-Value="PersonObj.Birthday" />
    </SectionBox>

    <CodeBox>
        &lt;FieldDate
        Model="ModelName"
        ValueType="DateTime"
        Label="&#64;nameof(Obj.Property)"
        &#64;bind-Value="Obj.Name" Col="12" /&gt;
    </CodeBox>

    <div class="clearfix" />
</div>

<div class="preview-box">
    <h2>FieldCheckbox</h2>

    <SectionBox>
        <FieldCheckbox Model="PersonExample" Label="@nameof(PersonObj.IsProgrammer)" Display="inline-block" @bind-Value="PersonObj.IsProgrammer" />
        <FieldCheckbox Model="PersonExample" Label="@nameof(PersonObj.IsActive)" Display="inline-block" @bind-Value="PersonObj.IsActive" />
    </SectionBox>

    <CodeBox>
        &lt;FieldCheckbox
        Model="ModelName"
        Label="&#64;nameof(Obj.Property)"
        Display="inline-block"
        &#64;bind-Value="Obj.Name" /&gt;
    </CodeBox>

    <div class="clearfix" />
</div>